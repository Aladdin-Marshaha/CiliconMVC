@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<section id="signin" class="signin">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignIn" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <div class="errorMassage">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <h1>Welcome Back</h1>
            <p>Don’t have an account yet? <a asp-controller="Auth" asp-action="SignUp">Sign up here</a>.</p>

            <div class="content">
                <div id="form-email" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>
                <div id="form-remember" class="checkbox-group">
                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe">Keep me signed in.</label>
                </div>
            </div>
            <button id="form-button" class="btn-theme" type="submit">Sign In</button>
            <div id="form-forgot-password">
               <a asp-controller="Account" asp-action="Forgot" >Forgot your password?</a>
            </div>
        </form>
    </div>
</section>
